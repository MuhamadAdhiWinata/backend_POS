model CreditCategory {
  id   Int    @id @default(autoincrement())
  name String

  CreditProduct CreditProduct[]
}

model CreditProduct {
  id               Int      @id @default(autoincrement())
  customerId       Int
  creditCategoryId Int
  productName      String
  startDate        DateTime
  endDate          DateTime
  totalAmount      Decimal  @db.Decimal(10, 2)

  Customer          Customer            @relation(fields: [customerId], references: [id], onDelete: Cascade)
  CreditCategory    CreditCategory      @relation(fields: [creditCategoryId], references: [id], onDelete: Cascade)
  CreditInstallment CreditInstallment[]
}

model CreditInstallment {
  id              Int      @id @default(autoincrement())
  creditProductId Int
  amount          Decimal  @db.Decimal(10, 2)
  paidAt          DateTime
  note            String?

  CreditProduct CreditProduct @relation(fields: [creditProductId], references: [id], onDelete: Cascade)
}
